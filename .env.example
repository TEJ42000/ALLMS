# LLS Study Portal - Environment Variables

# Anthropic API Key (required)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Google Cloud Project (for deployment)
GCP_PROJECT_ID=vigilant-axis-483119-r8
GCP_REGION=europe-west4

# Application Settings
APP_NAME=lls-study-portal
PORT=8080

# Development Settings
DEBUG=False
LOG_LEVEL=INFO

# ECHR Case Law Database
# Directory for ECHR case law cache (SQLite database)
# Default: data/echr_cache
ECHR_CACHE_DIR=data/echr_cache

# ============================================================================
# Authentication Settings (Google IAP)
# ============================================================================

# Enable/disable authentication (set to 'false' for local development)
AUTH_ENABLED=true

# Primary allowed domain (users from this domain have full access)
AUTH_DOMAIN=mgms.eu

# Google OAuth Client ID (required for IAP JWT verification in production)
# Get this from Google Cloud Console > APIs & Services > Credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com

# IAP Audience (auto-detected if not set, format: /projects/PROJECT_NUMBER/apps/PROJECT_ID)
# IAP_AUDIENCE=

# Mock user settings (only used when AUTH_ENABLED=false)
AUTH_MOCK_USER_EMAIL=dev@mgms.eu
AUTH_MOCK_USER_IS_ADMIN=true
